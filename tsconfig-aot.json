{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "outDir": "dist/www/app",
    "lib": [
      "es2015",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "files": [
    "src/app/app.module.ts",
    "src/main.ts",
    "src/polyfills.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "dist/aot",
    "skipMetadataEmit": true
  }
}